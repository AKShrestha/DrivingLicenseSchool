<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b1"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#f0eb79"
                android:foreground="?attr/selectableItemBackground"
                android:drawableTop="@drawable/car"
                android:paddingTop="25dp"
                android:text="Car Exam"
                android:onClick="b1"
                android:textAllCaps="false"
                android:textColor="#2f2e2e"
                android:textSize="18sp" />


            <Button
                android:id="@+id/b2"
                android:onClick="b2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#e79b40"
                android:foreground="?attr/selectableItemBackground"
                android:drawableTop="@drawable/motorcycle"
                android:paddingTop="25dp"
                android:text="Motorcycle Exam"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b3"
                android:onClick="b3"
                android:layout_width="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#e7595d"
                android:drawableLeft="@drawable/video"
                android:paddingLeft="45dp"
                android:text="Youtube Video"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b4"
                android:onClick="b4"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#a084d1"
                android:drawableTop="@drawable/random"
                android:paddingTop="25dp"
                android:foreground="?attr/selectableItemBackground"
                android:text="Random Question"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b5"
                android:onClick="b5"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#80e7a9"
                android:drawableTop="@drawable/setting"
                android:paddingTop="25dp"
                android:text="Facebook"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b6"
                android:onClick="b6"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1"
                android:background="#d9dbd0"
                android:drawableTop="@drawable/signal"
                android:paddingTop="40dp"
                android:text="Signal"
                android:textAllCaps="false"
                android:textColor="#2f2e2e"
                android:textSize="18sp" />


            <Button
                android:id="@+id/b7"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#cc8d66"
                android:drawableTop="@drawable/rules"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="b7"
                android:paddingTop="40dp"
                android:text="Rules"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b8"
                        android:onClick="b8"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#63c28c"
                        android:drawableLeft="@drawable/online"
                        android:foreground="?attr/selectableItemBackground"
                        android:paddingLeft="35dp"
                        android:text="Online"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <Button
                            android:id="@+id/b9"
                            android:onClick="b9"
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="#f71735"
                            android:foreground="?attr/selectableItemBackground"
                            android:drawableTop="@drawable/share"
                            android:paddingTop="25dp"
                            android:text="Like"
                            android:textAllCaps="false"
                            android:textColor="#fff" />


                        <Button
                            android:id="@+id/b10"
                            android:onClick="b10"
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="#88a6db"
                            android:drawableTop="@drawable/about"
                            android:paddingTop="25dp"
                            android:text="About Us"
                            android:foreground="?attr/selectableItemBackground"
                            android:textAllCaps="false"
                            android:textColor="#fff" />
                </LinearLayout>


    </LinearLayout>


</ScrollView>
